---
import '../styles/global.css' 
import { Image } from 'astro:assets'
import cardImage from './screenshot.png'
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solar Tech System - Powering Tomorrow's World</title>
    <meta name="description" content="Revolutionary solar technology solutions for homes and businesses. Harness the power of the sun with our cutting-edge solar systems.">
  </head>
  <body class="bg-gray-50">
    <!-- Header -->
    <header class="fixed top-0 w-full bg-white/90 backdrop-blur-md z-50 border-b border-gray-200">
      <nav class="container mx-auto px-6  flex">
        <img src="/solar-logo.jpg" alt="Solar Tech Energy Systems Logo" width="100" class="pr-2" />

          <div class="hidden md:flex items-center space-x-8">
            <a href="#home" class="text-gray-700 hover:text-yellow-600 transition-colors">Home</a>
            <a href="#solutions" class="text-gray-700 hover:text-yellow-600 transition-colors">Solutions</a>
            <a href="#about" class="text-gray-700 hover:text-yellow-600 transition-colors">About</a>
            <a href="#contact" class="text-gray-700 hover:text-yellow-600 transition-colors">Contact</a>
            <button class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-6 py-2 rounded-full hover:shadow-lg transition-all">
              Get Quote
            </button>
          </div>

          <button class="md:hidden">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Hero Section -->
    <section id="home" class="min-h-screen flex items-center relative overflow-hidden pt-20 bg-gradient-to-br from-blue-600 via-purple-600 to-blue-800">
      <div class="absolute inset-0 bg-gradient-to-r from-yellow-400/20 to-orange-400/20"></div>

      <div class="container mx-auto px-6 relative z-10">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="text-white">
            <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
              Harness the 
              <span class="bg-gradient-to-r from-yellow-300 to-orange-300 bg-clip-text text-transparent">
                Power of Tomorrow
              </span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-200 leading-relaxed">
              Revolutionary solar technology that transforms sunlight into sustainable energy for your home and business.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <button class="bg-white text-gray-800 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-all hover-lift pulse-glow">
                Start Your Solar Journey
              </button>
              <button class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold hover:bg-white hover:text-gray-800 transition-all">
                Learn More
              </button>
            </div>
          </div>

          <div class="relative">
            <div class="floating">
              <div class="w-96 h-96 mx-auto relative">
                <div class="absolute inset-0 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full opacity-20 blur-3xl"></div>
                <div class="relative bg-white/10 backdrop-blur-lg rounded-3xl p-8 border border-white/20">
                  <div class="grid grid-cols-3 gap-4">
                    <div class="bg-yellow-400 h-12 rounded-lg opacity-80"></div>
                    <div class="bg-orange-400 h-12 rounded-lg opacity-90"></div>
                    <div class="bg-yellow-500 h-12 rounded-lg opacity-85"></div>
                    <div class="bg-orange-500 h-12 rounded-lg opacity-75"></div>
                    <div class="bg-yellow-600 h-12 rounded-lg opacity-95"></div>
                    <div class="bg-orange-400 h-12 rounded-lg opacity-80"></div>
                    <div class="bg-yellow-500 h-12 rounded-lg opacity-90"></div>
                    <div class="bg-orange-600 h-12 rounded-lg opacity-85"></div>
                    <div class="bg-yellow-400 h-12 rounded-lg opacity-80"></div>
                  </div>
                  <div class="mt-6 text-center text-white">
                    <div class="text-3xl font-bold">99.2%</div>
                    <div class="text-sm opacity-80">Efficiency Rate</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </section>

    <!-- Features Section -->
    <section id="solutions" class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">
            Next-Generation Solar Solutions
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Experience the future of renewable energy with our cutting-edge solar technology designed for maximum efficiency and sustainability.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Card product 1 -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-3xl hover-lift">
            <Image src={cardImage} alt="Card product" class="rounded-t-2xl w-full"/>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-4 text-gray-800 text-center">Solar Panels and Batteries</h3>
              <ul class="text-gray-600 list-disc">
                <li>Renesys Solar Panels Grade A</li>
                <li>Lithium Ion ( Freedom Won )</li>
                <li>Lead Acid</li>
                <li>Victron MPPT</li>
              </ul>
            </div>
          </div>

          <!-- Card product 2 -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-3xl hover-lift">
            <Image src={cardImage} alt="Card product" class="rounded-t-2xl w-full"/>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-4 text-gray-800 text-center">System Accesories</h3>
              <ul class="text-gray-600 list-disc">
                <li> DC Cabling and Components (some included in combiner boxes)</li>
                <li>Victron Energy Data Cables</li>
                <li>Online Monitoring</li>
                <li>Victron BatteryChargers</li>
              </ul>
            </div>
          </div>

          <!-- Card product 3 -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-3xl hover-lift">
            <Image src={cardImage} alt="Card product" class="rounded-t-2xl w-full"/>
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-4 text-gray-800 text-center">Inverters</h3>
              <ul class="text-gray-600 list-disc">
                <li>Off- Grid (Victron)</li>
                <li>Grid- Tie (Fronius Inverter)</li>
                <li>Hybrid (ATESS)</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" >
      <div class="flex bg-[url(/solarImage.png)] bg-cover">
        <div class="items-center flex-1/2 bg-white py-16 px-4 rounded-r-[100px]">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">
            Leading the Solar Revolution
          </h2>
          <p class="text-xl text-gray-600 mb-6 leading-relaxed">
            Solartech Energy Systems(Pty) Ltd is a multi-discipline company that specialises
            in Solar Technolgy. Solartech Energy Systems delivers high quality and reliable
            Solar Energy services, construction and supplies services to different clients and
            customers, ranging from individuals to corporations and government sectors at all
            times.
          </p>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Our MISSION is to be a globalised producer of clean energy products.
          </p>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Our VISION is to be the first choice clean energy & reliable power producer.
          </p>
        </div>
        <div class="flex-1/3">
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-yellow-500 to-orange-600">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">
          Ready to Go Solar?
        </h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Join thousands of satisfied customers who have made the switch to clean, renewable energy. Get your free consultation today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-white text-gray-800 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-all hover-lift">
            Get Free Quote
          </button>
          <button class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold hover:bg-white hover:text-gray-800 transition-all">
            Call Now: (555) 123-SOLAR
          </button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer id="contact" class="bg-gray-900 text-white py-16">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center space-x-2 mb-6">
              <div class="w-10 h-10 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"/>
                </svg>
              </div>
              <span class="text-xl font-bold">Solar Tech System</span>
            </div>
            <p class="text-gray-400 leading-relaxed">
              Powering a sustainable future with innovative solar technology solutions.
            </p>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Services</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="#" class="hover:text-white transition-colors">Residential Solar</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Commercial Solar</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Battery Storage</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Maintenance</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Company</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="#" class="hover:text-white transition-colors">About Us</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Careers</a></li>
              <li><a href="#" class="hover:text-white transition-colors">News</a></li>
              <li><a href="#" class="hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
            <div class="space-y-2 text-gray-400">
              <p>123 Solar Street</p>
              <p>Green City, GC 12345</p>
              <p>(555) 123-SOLAR</p>
              <p>info@solartech.com</p>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
          <p>&copy; 2025 Solar Tech System. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Add scroll effect to header
    window.addEventListener('scroll', () => {
      const header = document.querySelector('header');
      if (window.scrollY > 100) {
        header.classList.add('shadow-lg');
      } else {
        header.classList.remove('shadow-lg');
      }
    });
    </script>
  </body>
</html>
