    <!-- Footer section -->
    <footer class="bg-gray-900 text-white py-12 px-6 md:px-16">
      <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-10 text-center md:text-left">

        <!-- Company Info -->
        <div>
          <h3 class="text-xl font-bold mb-4">Defense-Tech Security Services</h3>
          <p class="text-gray-400">
            Fortifying physical infrastructure through advanced defence systems and expert monitoring.
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="text-xl font-bold mb-4">Quick Links</h3>
          <ul class="space-y-2 text-gray-300">
            <li><a href="#about" class="hover:text-white transition">About Us</a></li>
            <li><a href="#services" class="hover:text-white transition">Services</a></li>
            <li><a href="#contact" class="hover:text-white transition">Contact</a></li>
