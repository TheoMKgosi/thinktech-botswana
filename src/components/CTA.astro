---
const handleSubmit = async (e) => {
  e.preventDefault();
  const form = e.target;

  const res = await fetch('/api/contact', {
    method: 'POST',
    body: new FormData(form),
  });

  const data = await res.json();
  alert(data.message || 'Thanks, we’ll get back to you soon!');
};
---

<section id="contact" class="py-20 bg-red-600 text-white">
  <h2 class="text-3xl font-bold mb-4 text-center">Let's Talk Cyber Security</h2>
  <p class="mb-8 text-lg text-center">Drop your details — our experts will reach out within 24 hours.</p>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16">

      <!-- Contact Info -->
      <div>
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-gray-700 text-sm font-medium mb-6">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          Contact SecureX
        </div>

        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Ready to Secure Your <span class="text-white underline">Digital Perimeter?</span>
        </h2>

        <div class="space-y-6 mb-8">

          <!-- Phone -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-gray-700 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold">Call Us 24/7</h3>
              <a href="tel:+1-555-0123" class="text-white hover:underline font-medium">(555) 123-4567</a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-gray-700 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold">Email Us</h3>
              <a href="mailto:info@secureguardpro.com" class="text-white hover:underline font-medium">info@secureguardpro.com</a>
            </div>
          </div>

          <!-- Address -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-gray-700 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold">Visit Our HQ</h3>
              <p class="text-gray-300">123 Cyber Blvd, Suite 100<br>Secure District, ST 12345</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <form on:submit={handleSubmit} class="bg-white text-black p-8 rounded-lg shadow-md space-y-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-1 font-medium">Full Name</label>
            <input type="text" name="name" placeholder="Full Name" required class="p-3 rounded-md border w-full" />
          </div>
          <div>
            <label class="block mb-1 font-medium">Email Address</label>
            <input type="email" name="email" placeholder="Email Address" required class="p-3 rounded-md border w-full" />
          </div>
        </div>
        <div>
          <label class="block mb-1 font-medium">Subject</label>
          <input type="text" name="subject" placeholder="Subject" class="p-3 rounded-md border w-full" />
        </div>
        <div>
          <label class="block mb-1 font-medium">Message</label>
          <textarea name="message" placeholder="Your Message" rows="4" required class="p-3 rounded-md border w-full"></textarea>
        </div>
        <button type="submit" class="bg-red-600 text-white mt-4 px-6 py-3 rounded-md hover:bg-red-700 transition">
          Send Message
        </button>
      </form>
    </div>

    <!-- Google Map -->
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7557704.996909897!2d24.6871035!3d-22.342840849999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ea44321d1452211%3A0xf1647c2a8715af7b!2sBotswana!5e0!3m2!1sen!2sbw!4v1751404683879!5m2!1sen!2sbw"
      class="w-full h-72 mt-12 rounded-lg border-0"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>
</section>

